# データベース設定
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/ai_media_assistant
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=ai_media_assistant

# Redis設定
REDIS_URL=redis://localhost:6379
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# AI/ML API設定
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-west1-gcp

# Google Cloud設定
GCP_PROJECT_ID=your_gcp_project_id
GCP_BUCKET_NAME=ai-media-assistant-storage
GOOGLE_APPLICATION_CREDENTIALS=./credentials/gcp-service-account.json

# アプリケーション設定
SECRET_KEY=your_super_secret_key_here
API_V1_STR=/api/v1
ACCESS_TOKEN_EXPIRE_MINUTES=43200

# フロントエンド設定
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# ファイル処理設定
MAX_FILE_SIZE=52428800
WHISPER_MODEL=base
TESSERACT_CMD=/usr/bin/tesseract

# LLM設定
DEFAULT_LLM_MODEL=gpt-3.5-turbo
MAX_TOKENS=4000
TEMPERATURE=0.1

# RAG設定
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
VECTOR_DB_COLLECTION=media_embeddings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# 監視・ログ設定
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=INFO

# 外部API設定 (オプション)
NEWS_API_KEY=your_news_api_key_here
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here
YOUTUBE_API_KEY=your_youtube_api_key_here

# Slack通知設定
SLACK_WEBHOOK_URL=your_slack_webhook_url_here
SLACK_CHANNEL=#ai-media-assistant

# 開発環境設定
DEBUG=true
TESTING=false
